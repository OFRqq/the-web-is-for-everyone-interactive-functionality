{% render 'partials/head.liquid', title: 'Tumi Mundo' %}

<h1>Playlists</h1>

<form class="form-playlist" method="POST" action="/playlist">
  <input class="title" type="text" name="title" placeholder="title">
  <input class="description" type="text" name="description" placeholder="description">
  <button type="submit">verstuur</button>
</form>

<main class="playlist-container">
  <ul>
    {% for playlist in playlist %}
    <li class="playlist">
      <h2>{{ playlist.title }}</h2>
      <p>{{ playlist.description }}</p>
      {% if playlist.image %}
      <img rsc="https://fdnd-agency.directus.app/assets/{{ playlist.image }}">
      {% else %}
      <p>[no image available]</p>
    </li>
      {% endif %}
  {% endfor %}
  </ul>
</main>